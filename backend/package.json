{
  "name": "planner-backend",
  "version": "1.0.0",
  "description": "Backend API for the Planner application",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --ci --watchAll=false --verbose",
    "lint": "npx eslint src --ext .js",
    "lint:fix": "npx eslint src --ext .js --fix", 
    "format": "npx prettier --write src/**/*.js",
    "format:check": "npx prettier --check src/**/*.js",
    "db:migrate": "node src/database/migrations/migrate.js",
    "db:seed": "node src/database/seeds/seed.js",
    "health-check": "curl -f http://localhost:3001/health || exit 1",
    "posttest": "npm run format:check"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "sqlite3": "^5.1.6",
    "express-validator": "^7.0.1",
    "dotenv": "^16.3.1",
    "sqlite": "^5.1.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "eslint": "^8.45.0",
    "prettier": "^3.0.0",
    "@types/jest": "^29.5.5",
    "jest-environment-node": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/database/**",
      "!src/**/*.test.js",
      "!src/**/migrations/**",
      "!src/**/seeds/**"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html",
      "json"
    ],
    "coverageDirectory": "coverage",
    "coverageThreshold": {
      "global": {
        "branches": 60,
        "functions": 60,
        "lines": 60,
        "statements": 60
      }
    },
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "testTimeout": 10000
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "planner",
    "backend",
    "api",
    "express",
    "sqlite"
  ],
  "author": "Your Name",
  "license": "ISC"
}