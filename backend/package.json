{
  "name": "planner-backend",
  "version": "1.0.0",
  "description": "Backend API for the Planner application",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --coverage --ci --watchAll=false --verbose",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .js",
    "lint:fix": "eslint src --ext .js --fix",
    "format": "prettier --write src/**/*.js",
    "format:check": "prettier --check src/**/*.js",
    "db:migrate": "node src/database/migrations/migrate.js",
    "db:seed": "node src/database/seeds/seed.js",
    "health-check": "curl -f http://localhost:3001/health || exit 1",
    "posttest": "npm run format:check"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "eslint": "^9.35.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.6.2",
    "superagent": "^10.2.3",
    "supertest": "^7.1.4"
  }
}
